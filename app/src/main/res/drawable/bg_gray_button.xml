<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dark_gray"/>
            <corners android:radius="@dimen/background_cornerRadius" />
            <padding
                android:left="@dimen/button_background_paddingHorizontal"
                android:top="@dimen/button_background_paddingVertical"
                android:right="@dimen/button_background_paddingHorizontal"
                android:bottom="@dimen/button_background_paddingVertical" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/gray"/>
            <corners android:radius="@dimen/background_cornerRadius" />
            <padding
                android:left="@dimen/button_background_paddingHorizontal"
                android:top="@dimen/button_background_paddingVertical"
                android:right="@dimen/button_background_paddingHorizontal"
                android:bottom="@dimen/button_background_paddingVertical" />
        </shape>
    </item>
</selector>
